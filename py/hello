#!/usr/bin/env python3

import skilstak.colors as c

"""The Wonderful Hello World Program"""

    
def print_plain():
    print(c.rc() + "Hello" + who + "!")

def print_forever():
    while True:
        print(c.rc() + "Hello " + who + "!")

if __name__ == "__main__":
    who = ("You")

    print_forever()

